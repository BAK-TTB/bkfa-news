<%include ../partials/header%>
    </head>

    <body>
        <div id="wrapper">
            <%include ../partials/menu%>
                <div id="page-wrapper">
                    <div class="row">
                        <div class="col-md-12" align="center">
                            <h1 class="page-header">Thể Loại</h1>
                        </div>
                    </div>
                    
                    <% if (error.length > 0) { %>
                       <div class="alert alert-danger"><%= error %></div>
                    <% } else if(success.length > 0){ %>
                        <div class="alert alert-success"><%= success %></div>
                    <% } %>

                    <div class="row">
                        <div class="col-md-12">
                            <%include them%>
                            <button class="btn-success btn" data-toggle="modal" data-target="#myModal"><i class="fa fa-plus" ></i></button>
                        </div>
                    </div>
                    <br>
                    <br>
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    Danh Sách
                                </div>
                                <!-- /.panel-heading -->
                                <div class="panel-body">
                                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tên Thể Loại</th>
                                                <th>Sửa</th>
                                                <th>Xóa</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% theloai.forEach(function (i){ %>
                                                <tr class="gradeC">
                                                    <td>
                                                        <%=i.idtheloai%>
                                                    </td>
                                                    <td>
                                                        <%=i.tentheloai%>
                                                    </td>
                                                    <td>
                                                        <%include sua%>
                                                            <button class="btn-info btn" data-toggle="modal" data-target="#myModal<%=i.idtheloai%>"><i class="fa fa-edit" ></i></button>
                                                    </td>
                                                    <td class="center">
                                                        <%include xoa%>
                                                            <button class="btn-danger btn" data-toggle="modal" data-target="#xoaModal<%=i.idtheloai%>"><i class="fa fa-trash-o" ></i></button>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.panel-body -->
                            </div>
                            <!-- /.panel -->
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                </div>
        </div>
        <%include ../partials/footer%>
            <!-- DataTables JavaScript -->
            <script src="/admin/vendor/datatables/js/jquery.dataTables.min.js"></script>
            <script src="/admin/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
            <script src="/admin/vendor/datatables-responsive/dataTables.responsive.js"></script>
            <!-- Custom Theme JavaScript -->
            <script src="/admin/dist/js/sb-admin-2.js"></script>
            <!-- Page-Level Demo Scripts - Tables - Use for reference -->
            <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable({
                    responsive: true
                });
            });
            </script>
    </body>